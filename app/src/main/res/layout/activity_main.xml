<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.com.etn.myapplicationvistas.MainActivity"
    android:orientation="vertical"
    >



    <Button
        android:id="@+id/activity_main_button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnName"

        android:textAllCaps="false"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textStyle="italic"

        android:onClick="onClickSpinner"


        />
    <Button
        android:id="@+id/activity_main_button_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnNameTwo"

        android:background="@drawable/border_button"
        android:layout_marginTop="@dimen/activity_marginTop"
        android:textColor="@android:color/white"
        android:onClick="onClickProfile"

        />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabTest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_local_grocery_store_black_24dp"
        android:layout_gravity="center"

        android:onClick="onClickFab"



        />



</LinearLayout>
